@model FutsalApp.Models.Lapangan

@{
    ViewData["Title"] = "Buat Lapangan Baru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Buat Lapangan Baru</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-top: 10px;">
                <label asp-for="Kode" class="control-label"></label>
                <input asp-for="Kode" class="form-control" />
                <span asp-validation-for="Kode" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label asp-for="Nama" class="control-label"></label>
                <input asp-for="Nama" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label asp-for="Alamat" class="control-label"></label>
                <input asp-for="Alamat" class="form-control" />
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label asp-for="Karyawan" class="control-label"></label>
                <select asp-for="KaryawanId" asp-items="Model.Karyawans" class="form-select"></select>
                <span asp-validation-for="Karyawan" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kembali Ke List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
